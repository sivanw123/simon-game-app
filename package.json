{
  "name": "simon-game-app",
  "version": "1.0.0",
  "description": "Multiplayer Simon Says game with real-time WebSocket communication",
  "main": "dist/backend/server.js",
  "scripts": {
    "setup": "bash setup.sh",
    "go": "bash setup.sh",
    "publish": "bash publish.sh",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "build": "tsc && tsc-alias",
    "build:backend": "tsc -p tsconfig.backend.json",
    "dev": "concurrently --names \"backend,frontend\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ts": "tsc --watch",
    "start": "node dist/backend/server.js",
    "start:prod": "NODE_ENV=production node dist/backend/server.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "simon-says",
    "multiplayer",
    "game",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^9.2.1",
    "jsdom": "^27.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "supertest": "^7.0.0",
    "tsx": "^4.20.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.32",
    "@types/uuid": "^10.0.0",
    "cookie": "^1.0.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.62"
  }
}
